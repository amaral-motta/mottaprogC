#include <stdio.h>

int main() {
    float c, f;

    printf("Digite a temperatura em Celsius: ");
    scanf("%f", &c);
    f = (c * 9/5) + 32;
    printf("Em Fahrenheit: %.2f\n", f);

    printf("Digite a temperatura em Fahrenheit: ");
    scanf("%f", &f);
    c = (f - 32) * 5/9;
    printf("Em Celsius: %.2f\n", c);

    return 0;
}
